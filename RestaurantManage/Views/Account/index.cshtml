
@{
  Account acount = ViewBag.account as Account;
  string error = ViewBag.error;
}

<div class="container bootstrap snippets bootdeys">
<div class="row">
  <div class="col-xs-12 col-sm-9">
    <form asp-action="UpdateAccount" asp-controller="Account" method="post" class="form-horizontal">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">Thông tin tài khoản</h4>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <label class="col-sm-2 control-label">Tên đăng nhập</label>
            <div class="col-sm-10">
              <input name="userName" value="@acount.UserName" type="text" class="form-control" readonly required>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Tên hiển thị</label>
            <div class="col-sm-10">
              <input name="displayName" value="@acount.DisplayName" type="text" class="form-control" required>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Mật khẩu</label>
            <div class="col-sm-10">
              <input name="password" value="@acount.PassWord" type="password" class="form-control" minlength="6" required>
            </div>
          </div>
        </div>
      </div>

      <div class="panel panel-default">
        <div class="panel-body">
          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
              <button type="submit" class="btn btn-primary">Cập nhật</button>
              <button type="reset" class="btn btn-default">Hủy</button>
            </div>
          </div>
        </div>
      </div>
    </form>
    @if (@error != "Ok" && error != "")
    {
      <p style="color: red;">@error</p>
    }else if(@error == "Ok")
    {
      <p style="color: green;">Đã cập nhật tài khoản thành công</p>
    }
  </div>
</div>
</div>