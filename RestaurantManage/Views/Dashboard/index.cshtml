@{
    Layout = null;
    string mode = ViewBag.mode;
    double totalReveneu = 0;
    int totalFoods = 0;
    int totalCust = 0;
    List<RateReveneuDTO> reveneuDtos = new List<RateReveneuDTO>();
    List<TopFoodDTO> topFoods = new List<TopFoodDTO>();
