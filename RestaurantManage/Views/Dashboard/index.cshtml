    {
         totalReveneu = ViewBag.totalReveneu;
         totalFoods= ViewBag.totalFoods;
         totalCust = ViewBag.totalCust;
         reveneuDtos = ViewBag.reveneuDtos as List<RateReveneuDTO>;
